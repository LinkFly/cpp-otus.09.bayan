LD_LIBRARY_PATH="$1"

wrapTo() {
main=$1
wrapped=$2
echo "LD_LIBRARY_PATH="$LD_LIBRARY_PATH"">$main-config.conf
mv $main $wrapped
echo ". $main-config.conf">$main
echo "echo "$LD_LIBRARY_PATH"">>$main
echo "LD_LIBRARY_PATH="$LD_LIBRARY_PATH" ./$wrapped \$*">>$main
chmod u+x $main
chmod u+x $wrapped
}

wrapTo tests tests-orig
wrapTo bayan bayan-orig
